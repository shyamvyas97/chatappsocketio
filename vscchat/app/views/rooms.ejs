<!DOCTYPE html>
<html>
<head>
  <title>Vsc Chat</title>
   
<% include links.ejs %>
</head>
<body>
<div class="page-container">

<% include nav.ejs %>
<div class="inner-block" style="min-height: 860px">
  <div class="row">

      <div class="room" style="width: 100%;">
        <div class="room-header clearfix">
          <div class="room-about">
            <div class="room-title">Rooms</div>
            <div class="room-num-rooms"><%= rooms.length %> Room(s)</div>
          </div>
        </div> <!-- end room-header -->
        
        <div class="room-create clearfix">
          <input type="text" name="title" autofocus placeholder ="Type a new room">
          <button>Create</button>
        </div> <!-- end room-create -->

        <div class="room-list">
          <ul>
            <% if(rooms.length > 0) { %>
              <% rooms.forEach(function(room) { %>
                  <a href="/rooms/<%= room.id %>"><li class="room-item"><%= room.title %></li></a>
                <% }); %>
            <% } else { %>
              <p class="message" style="text-align: center; padding: 0; margin: 0;">Create your first room!</p>
            <% } %>
          </ul>
        </div> <!-- end room-list -->
      </div> <!-- end room -->
    <script src="/js/main.js"></script>
    <script>$(function(){app.rooms()});</script>
  </div>
</div>

<% include footer.ejs %>

</div>
<% include sidebar.ejs %>



<% include script.ejs %>
<script>


  $(document).ready(function() {
    // var socket= io.connect();
    $('.page-container').addClass('sidebar-collapsed-back');
    $('.page-container').removeClass('sidebar-collapsed-back');
    $('.page-container').addClass('sidebar-collapsed');
    var socket = io();
  });

</script>
</body>
</html>